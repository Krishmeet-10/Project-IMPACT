<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".volunteerLogInPage">

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <androidx.cardview.widget.CardView

        android:id="@+id/logInVolunteer"
        android:layout_width="298dp"
        android:layout_height="322dp"
        android:layout_centerInParent="true"
        android:layout_marginStart="42dp"
        android:layout_marginTop="174dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="194dp"
        android:background="?attr/colorControlHighlight"
        app:cardBackgroundColor="#3E6E69"
        android:layout_margin="20dp"
        app:cardCornerRadius="30dp">

        <TextView
            android:id="@+id/option"
            android:layout_width="287dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="40dp"
            android:fontFamily="serif"
            android:gravity="center"
            android:text="LOG IN"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="27sp"
            android:typeface="serif"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/userOutput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="120dp"
            android:layout_marginTop="73dp"
            android:gravity="center"
            android:text="Volunteer"
            android:textColor="#D3D3D3"
            android:textSize="15sp"
            tools:ignore="HardcodedText" />

        <EditText
            android:id="@+id/emailEditText2"
            android:layout_width="190dp"
            android:layout_height="53dp"
            android:layout_marginStart="55dp"
            android:layout_marginTop="105dp"
            android:hint="Email"
            android:importantForAutofill="yes"
            android:inputType="textEmailAddress"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="16sp"
            android:textStyle="italic"
            tools:ignore="HardcodedText" />

        <EditText
            android:id="@+id/passwordEditText2"
            android:layout_width="190dp"
            android:layout_height="53dp"
            android:layout_marginStart="55dp"
            android:layout_marginTop="165dp"
            android:hint="Password"
            android:importantForAutofill="no"
            android:inputType="textPassword"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="16sp"
            android:textStyle="italic"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/logInButton"
            android:layout_width="125dp"
            android:layout_height="38dp"
            android:layout_marginStart="90dp"
            android:layout_marginTop="220dp"
            android:layout_marginEnd="30dp"
            android:onClick="homepage"
            android:background="?attr/colorControlHighlight"
            android:text="Log In"
            android:textSize="12sp"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/forgotVButton"
            android:layout_width="253dp"
            android:layout_height="36dp"
            android:layout_marginStart="27dp"
            android:layout_marginTop="260dp"
            android:background="#00000000"
            android:text=" Forgot Password or ID"
            android:textSize="10sp"
            tools:ignore="HardcodedText,SmallSp">

        </Button>

    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="169dp"
        android:layout_marginTop="550dp"
        android:layout_marginBottom="144dp"
        android:fontFamily="serif"
        android:text="IMPACT"
        android:textAllCaps="false"
        android:textColor="#688DA6"
        android:textSize="20sp"
        android:textStyle="bold"
        android:typeface="sans" />


</RelativeLayout>