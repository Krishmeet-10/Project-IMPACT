<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".organizationDetails">

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="60dp"
        android:layout_marginTop="75dp"
        android:fontFamily="serif"
        android:text="Organization Details"
        android:textColor="@color/black"
        android:textSize="28sp"
        android:typeface="sans"
        tools:ignore="HardcodedText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="59dp"
        android:layout_marginTop="180dp"
        android:text="Name"
        android:textSize="15sp"
        android:textStyle="bold"
        tools:ignore="HardcodedText" />

    <EditText
        android:id="@+id/organisationNameEditText"
        android:layout_width="260dp"
        android:layout_height="48dp"
        android:layout_marginStart="75dp"
        android:layout_marginTop="200dp"
        android:autofillHints="true"
        android:fontFamily="sans-serif"
        android:hint="Enter Name"
        android:importantForAutofill="no"
        android:inputType="textCapCharacters"
        tools:ignore="HardcodedText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="59dp"
        android:layout_marginTop="290dp"
        android:text="Address"
        android:textStyle="bold"
        tools:ignore="HardcodedText" />

    <EditText
        android:layout_width="260dp"
        android:layout_height="48dp"
        android:layout_marginStart="75dp"
        android:layout_marginTop="310dp"
        android:autofillHints="true"
        android:fontFamily="sans-serif"
        android:hint="Enter Address"
        android:inputType="textPostalAddress"
        tools:ignore="HardcodedText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="55dp"
        android:layout_marginTop="400dp"
        android:text="Phone Number"
        android:textStyle="bold"
        tools:ignore="HardcodedText" />

    <EditText
        android:layout_width="260dp"
        android:layout_height="48dp"
        android:layout_marginStart="75dp"
        android:layout_marginTop="420dp"
        android:autofillHints="true"
        android:fontFamily="sans-serif"
        android:hint="Enter phone number"
        android:inputType="phone"
        tools:ignore="HardcodedText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="55dp"
        android:layout_marginTop="510dp"
        android:text="Category(If Any)"
        android:textStyle="bold"
        tools:ignore="HardcodedText" />

    <EditText
        android:layout_width="268dp"
        android:layout_height="48dp"
        android:layout_marginStart="75dp"
        android:layout_marginTop="530dp"
        android:autofillHints="true"
        android:fontFamily="sans-serif"
        android:hint="Environment/Animal Welfare etc."
        android:inputType="textCapCharacters"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/volunPass"
        android:layout_width="102dp"
        android:layout_height="59dp"
        android:layout_marginStart="155dp"
        android:layout_marginTop="620dp"
        android:backgroundTint="#548e89"
        android:backgroundTintMode="add"
        android:text="Next->"
        android:onClick="setNextOActivity"
        tools:ignore="HardcodedText" />


</RelativeLayout>