<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    android:id="@+id/scroll"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".volunteerDetails">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="80dp"
            android:layout_marginStart="85dp"
            android:layout_marginTop="75dp"
            android:layout_marginEnd="94dp"
            android:fontFamily="serif"
            android:text="Volunteer Details"
            android:textColor="@color/black"
            android:textSize="28sp"
            android:typeface="sans"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="59dp"
            android:layout_marginTop="180dp"
            android:text="Name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="HardcodedText" />

        <EditText
            android:id="@+id/editVolName"
            android:layout_width="260dp"
            android:layout_height="48dp"
            android:layout_marginStart="75dp"
            android:layout_marginTop="200dp"
            android:autofillHints="true"
            android:hint="Enter name"
            android:importantForAutofill="no"
            android:background="@drawable/edit_text_round_input"
            android:inputType="textCapCharacters"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="59dp"
            android:layout_marginTop="290dp"
            android:text="Age"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="HardcodedText" />

        <EditText
            android:id="@+id/editVolAge"
            android:layout_width="260dp"
            android:layout_height="48dp"
            android:layout_marginStart="75dp"
            android:layout_marginTop="310dp"
            android:autofillHints="true"
            android:hint="Enter age"
            android:inputType="number"
            android:background="@drawable/edit_text_round_input"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="55dp"
            android:layout_marginTop="400dp"
            android:text="Phone Number"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="HardcodedText" />

        <EditText
            android:id="@+id/editVolPhone"
            android:layout_width="260dp"
            android:layout_height="48dp"
            android:layout_marginStart="75dp"
            android:layout_marginTop="420dp"
            android:autofillHints="true"
            android:hint="Enter phone number"
            android:inputType="phone"
            android:background="@drawable/edit_text_round_input"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="55dp"
            android:layout_marginTop="510dp"
            android:text="Occupation"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="HardcodedText" />

        <EditText
            android:id="@+id/editVolType"
            android:layout_width="260dp"
            android:layout_height="48dp"
            android:layout_marginTop="530dp"
            android:autofillHints="true"
            android:background="@drawable/edit_text_round_input"
            android:hint="Student/Developer/Artist etc."
            android:inputType="textCapCharacters"
            app:layout_constraintBottom_toTopOf="@+id/btnVolDetailsNext"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/btnVolDetailsNext"
            android:layout_width="102dp"
            android:layout_height="50dp"
            android:layout_marginTop="620dp"
            android:textSize="16sp"
            android:background="@drawable/btn_bg"
            android:backgroundTintMode="add"
            android:text="Next"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="HardcodedText" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>