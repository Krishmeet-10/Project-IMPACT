<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/vol_tracker_card"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    app:cardCornerRadius="4dp"
    android:elevation="4dp"
    app:cardBackgroundColor="@color/green"
    app:cardUseCompatPadding="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/vol_tracker_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="title"
            android:textSize="20dp"
            android:textColor="@color/white"/>

        <ImageView
            android:id="@+id/imagecvr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/vol_tracker_org"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/support_2355701_1920" />

        <TextView
        android:id="@+id/vol_tracker_org"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/vol_tracker_title"
        android:text="org"
        android:layout_marginTop="5dp"
        android:textColor="@color/white"
        android:textSize="15dp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>