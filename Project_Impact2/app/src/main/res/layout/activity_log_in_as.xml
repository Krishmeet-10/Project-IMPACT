<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".logInAs">

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <androidx.cardview.widget.CardView

        android:id="@+id/optionsCard"
        android:layout_width="302dp"
        android:layout_height="308dp"
        android:layout_centerInParent="true"
        android:layout_marginStart="42dp"
        android:layout_marginTop="174dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="194dp"
        app:cardBackgroundColor="#3E6E69"
        app:cardCornerRadius="30dp">

        <TextView
            android:id="@+id/option"
            android:layout_width="272dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="55dp"
            android:fontFamily="serif"
            android:text="How would you like to enter the app as?"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="21sp"
            android:typeface="serif"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/volunteerButton"
            android:layout_width="146dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="77dp"
            android:layout_marginTop="140dp"
            android:layout_marginEnd="30dp"
            android:background="?attr/colorControlHighlight"
            android:onClick="Volunteer"
            android:text="VOLUNTEER"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/organisationButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="77dp"
            android:layout_marginTop="198dp"
            android:onClick="Organization"
            android:background="?attr/colorControlHighlight"
            android:text="ORGANIZATION"
            tools:ignore="HardcodedText" />

    </androidx.cardview.widget.CardView>



</RelativeLayout>